{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all",
    ":renovatePrefix",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ],
  "useBaseBranchConfig": "merge",
  "dependencyDashboardAutoclose": true,
  "dotnet": {
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "Dotnet dependencies"
      },
      {
        "matchPackageNames": [
          "dotnet-sdk"
        ],
        "allowedVersions": [
          "<7"
        ]
      }
    ]
  }
}
